@model HardBank.Models.Kunde

@{  
    ViewBag.Title = "Login";
}

<div class="container centered">

    <div class="jumbotron">
        <form action="/User/LoginAuth" class="form-inline" method="post">
            <div class="form-group">
                <div id="authBox">
                    <label for="authkode" class="sr-only">Authentication</label>
                    <input id="authkode" name="authkode" class="form-control lineup" placeholder="Kode fra kodebrikke" required />
                </div>


                <div id="passBox" class="hidden">
                    <label for="inputPassword" class="sr-only">Passord</label>
                    <input name="passord" type="password" id="inputPassword" class="form-control lineup" placeholder="Passord" required />
                </div>
            </div>

            <div id="knapp" class="btn btn-primary">
                <i class="fa fa-adjust fa-arrow-right" aria-hidden="true"></i>
            </div>

        </form>

    </div>
    </div>

<script type="text/javascript" src="~/Scripts/login.js"></script>




