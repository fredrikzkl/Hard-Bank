    ViewBag.Title = "Minside";
}

<div class="container">
    <div class="jumbotron">
    <div container>
        <h1>Velkommen, </h1>
    </div>
        <div class="container">
            <div class="menu">
                <!--Menytabell-->
                <ul class="nav nav-tabs">
                    <li>
                        <a data-toggle="tab" href="#">Betale til en</a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#">Registrerte betalinger</a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#">Utførte betalinger</a>
                    </li>

                </ul>
            </div>
        </div>

        <div class="container">
            <div class="table">
                <h2>Mine konti</h2>
                <table class="table table-bordered">
                    <tr>
                        <th>Kontonavn</th>
                        <th>Kontonummer</th>
