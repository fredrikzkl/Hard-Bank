@using HardBank.Models;
@model HardBank.ViewModels.MinSideModel


@{
    ViewBag.Title = "Minside";
}


<div class="container">
    <div class="jumbotron">
    <!--
        <div class="alert alert-success fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Success!</strong> Ny betaling registret! Betalingsnr: 3
        </div>
     -->

    <div class="container">

        <h2>@Model.kunde.fornavn @Model.kunde.etternavn</h2>
        <h5>Kundenummer: @Model.kunde.id</h5>
        <h5>Personnummer: @Model.kunde.personnr</h5>

            <div class="table">
                <h2>Mine konti</h2>
                <table class="table table-bordered">
                    <tr>
                        <th>Kontonavn</th>
                        <th>Kontonummer</th>
                        <th>Saldo</th>
                    </tr>
                    
                        @{ foreach (Kontoer konti in Model.kontoer)
                            {
                              <tr>
                                <td>@konti.KontoNavn</td>
                                <td>@konti.Kontonr</td>
                                <td>@konti.Saldo</td>
                              </tr>
                            }
                        }
                   
                </table>
            </div>

    </div>



        <div class="container" id="minsideTab">
                <!--Menytabell-->
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a data-toggle="tab" href="#a">Betale til en</a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#b">Registrerte betalinger</a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#c">Utførte betalinger</a>
                    </li>

                </ul>

            <div class="tab-content clearfix">
                <div class="tab-pane active" id="a">
                    
                    @Html.Partial("_BetalePartial")
                </div>
                <div class="tab-pane" id="b">
                    @Html.Partial("_RegBetalingPartial")
                </div>
                <div class="tab-pane" id="c">
                    @Html.Partial("_UtforeBetalingPartial")
                </div>
            </div>
        </div>

        

        

           

        </div> <!--end jumbotron-->
</div>


<script type="text/javascript" src="~/Scripts/minSide.js"></script>

