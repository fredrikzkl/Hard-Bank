@using HardBank.Models;
@model HardBank.ViewModels.MinSideModel


@{
    ViewBag.Title = "Minside";
}


<div class="container">
    <div class="jumbotron">
    <!--
        <div class="alert alert-success fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Success!</strong> Ny betaling registret! Betalingsnr: 3
        </div>
     -->

    <div id="mypageheader">

        <div class="col-md-6">

            <h2>@Model.kunde.fornavn @Model.kunde.etternavn</h2>
            <h5>Kundenummer: @Model.kunde.id</h5>
            <h5 id="personNrLabel" data-value=@Model.kunde.personnr>Personnummer: @Model.kunde.personnr</h5>

        </div>



        <div class="col-md-6">
            <div class="table">
                <h2>Mine konti</h2>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Kontonavn</th>
                            <th>Kontonummer</th>
                            <th>Saldo</th>
                        </tr>
                    </thead>
                    <tbody id="kontoList">

                    </tbody>
                </table>
            </div>
            <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal">Åpne konto</button>
            </div>

        </div>

        


        <div class="container" id="minsideTab">
                <!--Menytabell-->
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a data-toggle="tab" href="#a">Betale til en</a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#b">Registrerte betalinger</a>
                    </li>
                    <!--
                    <li>
                        <a data-toggle="tab" href="#c">Utførte betalinger</a>
                    </li>
                        -->

                </ul>

            <div class="tab-content clearfix">
                <div class="tab-pane active" id="a">
                    
                    @Html.Partial("_BetalePartial")
                </div>
                <div class="tab-pane" id="b">
                    @Html.Partial("_RegBetalingPartial")
                </div>
                <div class="tab-pane" id="c">
                    @Html.Partial("_UtforeBetalingPartial")
                </div>
            </div>
        </div>

        

        

           

        </div> <!--end jumbotron-->
</div>


<script type="text/javascript" src="~/Scripts/minSide.js"></script>

@using (Html.BeginForm("LeggTilKonto", "User", FormMethod.Post))
{
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Åpne konto</h4>
            </div>
            <div class="modal-body">
                
                
                    <label>Kontonavn</label>
                    <input name="kontoNavn" id="kontonavn" type="text" class="form-control" placeholder="Skriv inn kontonavn" />

                    <br />
                    <input type="submit" value="Åpne konto"
                           class="submit btn btn-primary special-submit" />
               
            </div>
        </div>
    </div>
</div>
}