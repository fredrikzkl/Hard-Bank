
@{
    ViewBag.Title = "Velkommen til Hardbank!";
}

<div class="container centered">
        <h1>HardBank</h1>
</div>

<div class="container centered">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="max-width: 900px; margin: 0 auto">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">

            <div class="item active">
                <img src="Files/billaan.jpg" alt="Billån">
            </div>

            <div class="item">
                <img src="Files/sparsmart.png" alt="Bsu">
            </div>

            <div class="item">
                <img src="Files/varforsikret.png" alt="Innbo">
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


    <!-- Våre tilbud -->
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">

                    <hr class="primary">
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-university text-primary sr-icons"></i>
                        <h3>Lån og eiendom</h3>
                        <p class="text-muted"></p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-heart-o text-primary sr-icons"></i>
                        <h3>Forsikring</h3>
                        <p class="text-muted"></p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-suitcase text-primary sr-icons"></i>
                        <h3>Sparing</h3>
                        <p class="text-muted"></p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-credit-card-alt text-primary sr-icons"></i>
                        <h3>Kort og betaling</h3>
                        <p class="text-muted"></p>
                    </div>
                </div>
            </div>
            <hr>
        </div>
    </section>

    <section id="portfolio" class="bg-light-gray">
        <div class="container">

            <div class="row">


                <div class="col-md-4 col-sm-6">
                    <img src="Files/sparing.jpg" class="img-responsive" alt="">
                    <div class="picture-caption">
                        <h4>Bli medlem i dag - Få 1000kr!</h4>
                    </div>
                </div>

                <div class="col-md-4 col-sm-6">
                    <img src="Files/boligsparing.jpg" class="img-responsive" alt="">
                    <div class="picture-caption">
                        <h4>Boliglån med 2,10 % rente</h4>
                    </div>
                </div>



                <div class="col-md-4 col-sm-6">
                    <img src="Files/paraply.jpg" class="img-responsive" alt="">
                    <div class="picture-caption">
                        <h4>Innboforsikring til 79,- i måneden</h4>
                    </div>
                </div>


            </div>
        </div>

    </section>

</div>


