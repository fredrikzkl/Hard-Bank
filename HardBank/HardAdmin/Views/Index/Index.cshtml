
@{
    ViewBag.Title = "Index";
}


<div class="container">

    <img src="@Url.Content("~/Files/logo.png")" class="form-signin center-block" id="indexLogo" />

    <form class="form-signin">

        <label for="inputBrukerId" class="sr-only">Id</label>
        <input type="text" id="inputBrukerId" class="form-control" placeholder="Admin ID" />

        <label for="inputPassord" class="sr-only">Passord</label>
        <input type="password" id="inputPassord" class="form-control" placeholder="Passord" />

        <button id="submitLogin" class="btn btn-lg btn-primary btn-block">Logg inn</button>
    </form>
</div>



<!-- Login Failed Modal -->
<div id="loginFailModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span> Login Mislykket</h4>
            </div>
            <div class="modal-body">
                <p>Brukernavn eller Passord er feil</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Lukk</button>
            </div>
        </div>

    </div>
</div>

<script type="text/javascript" src="~/scripts/loginadmin.js"></script>


